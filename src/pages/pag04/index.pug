extends ../../templates/page/template.page-base-adaptativo.pug


block styles
	link(rel="stylesheet", href="style.css")

block body
	body(next-hide, menu-hide)
		.body
			.coverData.zoomIn.delay1
				#cover
					+image('pag02/personagem.png', '')
			.dados.up
				.infoD
					h4 Oi amiguinho(a), o <span class="nome bold">Bento</span> vai fazer uma super festa de <span class="anos bold">4</span> anos e você não pode ficar de fora! Vai ter muita brincadeira, docinhos e diversão!
					.subInfoD
						p <span class="bold">Data:</span> <span class="datF dia">2 de maio</span>,<span class="datF horas">às 17h</span>.
						p <span class="bold">Local:</span> <span class="datF endereco"><a href="https://maps.app.goo.gl/jwZUNCvYU3R2jBHJA" target="_blank">Avenida Afonso Pena, número 1377 - Bairro Canta do Sul, Belo Horizonte - MG</a></span>
						p.info Mas antes, vamos jogar essa grande aventura com o <span class="nome bold">Bento</span>.
				button.pulse.callGame(onclick="navigate.next()") Jogar

block scripts
	+scriptScripts('gsap.min.js')
	script(src="script.js")